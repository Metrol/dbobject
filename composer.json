{
    "name"       : "metrol/dbobject",
    "description": "Automatic mapping of Databases to PHP Objects",
    "type"       : "library",
    "license"    : "MIT License",
    "homepage"   : "https://github.com/Metrol/dbobject",
    "version"    : "0.1.0",

    "repositories" : [
        {
            "type": "vcs",
            "url" : "https://github.com/Metrol/dbsql"
        },
        {
            "type": "vcs",
            "url" : "https://github.com/Metrol/dbtable"
        }
    ],


    "require" : {
        "php"            : ">=5.5.9",
        "metrol/dbsql"   : "dev-master",
        "metrol/dbtable" : "dev-master",
        "ext-PDO"   : "*",
        "ext-json"  : "*"

    },

    "require-dev": {
        "phpunit/phpunit": "4.8.*"
    },

    "autoload": {
        "psr-4": {
            "Metrol\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Metrol\\Tests\\": "tests/"
        }
    }
}
